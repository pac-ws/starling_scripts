[Unit]
Description=Runs voxl_mpa_to_ros2_node
Wants=network.target
After=syslog.target network-online.target

[Service]
Type=simple
Environment=ROS_HOME=/opt/ros/foxy
Environment=ROS_DOMAIN_ID=10
ExecStart=/bin/bash -lc "source /opt/ros/foxy/mpa_to_ros2/install/setup.bash && ros2 run voxl_mpa_to_ros2 voxl_mpa_to_ros2_node"
Restart=on-failure
RestartSec=5
KillMode=mixed

StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
